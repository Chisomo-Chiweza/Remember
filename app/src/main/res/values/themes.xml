<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Remember" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_coral</item>
        <item name="colorPrimaryVariant">@color/limed_spruce</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/limed_spruce</item>
        <item name="colorSecondaryVariant">@color/outer_space</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customizations -->
        <item name="android:background">@color/wild_sand</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>
</resources>